<?xml version="1.0" encoding="UTF-8"?>
<project name="helper" default="unpack" basedir=".">
    <target name="download">
        <copy todir="downloads/resources" flatten="true">
            <resources>
                <url url="http://opencorpora.org/files/export/annot/annot.opcorpora.xml.byfile.bz2"/>
            </resources>
        </copy>
    </target>
    <target name="unpack" depends="download">
        <untar src="downloads/resources/annot.opcorpora.xml.byfile.bz2"
               dest="src/main/resources/org/opencorpora/data"
               compression="bzip2"/>
    </target>
</project>
